{
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "singleQuote": true,
  "semi": false,
  "arrowParens": "avoid",
  "quoteProps": "consistent",
  "tailwindAttributes": [
    "enter",
    "enterFrom",
    "enterTo",
    "leave",
    "leaveFrom",
    "leaveTo",
    ".*Variants.*",
    ".*Mapping.*"
  ],
  "tailwindFunctions": ["clsx", "cn", "cva", "join"],
  "importOrder": [
    "<TYPES>",
    "",
    "^react$",
    "",
    "<BUILTIN_MODULES>",
    "",
    "<THIRD_PARTY_MODULES>",
    "",
    "^@/.*$",
    "",
    "^[./]",
    "",
    "\\.css$"
  ]
}
